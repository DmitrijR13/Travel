@model FPCS.Web.Admin.Models.Email.EmailIndexModel
@using FPCS.Data.Enums
@{
    ViewBag.Title = "Детали сообщения";
    ViewBag.Header = "Детали сообщения";
}

@Html.HiddenFor(x => x.EmailLetterId)

<div class="control-group">
    @Html.LabelFor(x => x.Theme, new { @class = "control-label" })
    <div class="editor-field-textbox">
        @Html.TextBoxFor(x => x.Theme, new { @class = "editor-field-textbox", @readonly = "true", @disabled = "true" })
    </div>
</div>
<div class="control-group">
    @Html.LabelFor(x => x.Body, new { @class = "control-label" })
    <div class="editor-field">
        @Html.TextAreaFor(x => x.Body, new { @class = "editor-field", @readonly = "true", @disabled = "true" })
    </div>
</div>

<div class="row-fluid">
    <div class="span12 gridWrapper">
        <table id="gridTable"></table>
        <div id="gridPager"></div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/css/jqGrid")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqGrid")

    <script type="text/javascript">
        jQuery(function ($) {

            var emailLetterId = @Model.EmailLetterId;
            emailDetail.initIndexPage(emailLetterId);

            window.addEventListener("resize", function () {
                $('.chzn-container').innerWidth($('#selecciona_paciente_estadisticas_form').innerWidth());
                $('.chzn-search input').innerWidth($('#selecciona_paciente_estadisticas_form').innerWidth() - 12);
                $('.chzn-drop').innerWidth($('#selecciona_paciente_estadisticas_form').innerWidth() - 2);
            }, false);
        });
    </script>
}