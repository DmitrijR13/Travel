@model FPCS.Web.Admin.Models.IncomingMessageJournal.IncomingMessageJournalIndexModel
@using FPCS.Data.Enums
@{
    ViewBag.Title = "Журнал учета входящих заявок";
    ViewBag.Header = "Журнал учета входящих заявок";
}
@Html.Hidden("IncomingSources", Model.IncomingSources, new { id = "incomingSources" })
@Html.Hidden("SourceInfos", Model.SourceInfos, new { id = "sourceInfos" })

<div class="row-fluid">
    <div class="span12 gridWrapper">
        <table id="gridTable"></table>
        <div id="gridPager"></div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/css/jqGrid")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqGrid")

    <script type="text/javascript">
        jQuery(function ($) {
            incomingMessageJournal.initIndexPage();

            window.addEventListener("resize", function () {
                $('.chzn-container').innerWidth($('#selecciona_paciente_estadisticas_form').innerWidth());
                $('.chzn-search input').innerWidth($('#selecciona_paciente_estadisticas_form').innerWidth() - 12);
                $('.chzn-drop').innerWidth($('#selecciona_paciente_estadisticas_form').innerWidth() - 2);
            }, false);
        });
    </script>
}