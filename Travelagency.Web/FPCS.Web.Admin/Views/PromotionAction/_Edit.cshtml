@model FPCS.Web.Admin.Models.PromotionAction.PromotionActionEditModel

<div class="row-fluid">
    <div class="span12 ">
            <div class="row-fluid">
                <div class="span12 ">

                    @using (Html.BeginForm("_Edit", "PromotionAction", FormMethod.Post, new { id = "editPromotionActionForm", @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="control-group">
                            <div class="controls">
                                <h3 class="lighter block green">Редактирование данных о виде экскурсии</h3>
                            </div>
                        </div>

                        <div class="controls">
                            @Html.ValidationSummary(true)
                        </div>

                        @Html.HiddenFor(x => x.PromotionActionId);

                        <div class="control-group">
                            @Html.LabelFor(x => x.Name, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(x => x.Name, new { placeholder = Html.DisplayNameFor(x => x.Name), @class = "span9" })
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </div>
                        <div class="control-group">
                            @Html.LabelFor(x => x.DateStart, new { @class = "control-label" })
                            <div class="controls ">
                                <div class="row-fluid input-append">
                                    @Html.TextBoxFor(x => x.DateStart, "{0:dd.MM.yyyy}", new { placeholder = Html.DisplayNameFor(x => x.DateStart), @class = "span3 date-picker", data_date_format = "dd.MM.yyyy" })
                                    <span class="add-on">
                                        <i class="icon-calendar"></i>
                                    </span>
                                    @Html.ValidationMessageFor(m => m.DateStart)
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            @Html.LabelFor(x => x.DateFinish, new { @class = "control-label" })
                            <div class="controls ">
                                <div class="row-fluid input-append">
                                    @Html.TextBoxFor(x => x.DateFinish, "{0:dd.MM.yyyy}", new { placeholder = Html.DisplayNameFor(x => x.DateFinish), @class = "span3 date-picker", data_date_format = "dd.MM.yyyy" })
                                    <span class="add-on">
                                        <i class="icon-calendar"></i>
                                    </span>
                                    @Html.ValidationMessageFor(m => m.DateFinish)
                                </div>
                            </div>
                        </div>
                        <div class="control-group">
                            @Html.LabelFor(x => x.PrAction, new { @class = "control-label" })
                            <div class="controls">
                                @Html.DropDownListFor(x => x.PrAction, Model.PrActions, new { @class = "span9" })
                                @Html.ValidationMessageFor(m => m.PrAction)
                            </div>
                        </div>
                        <div class="form-actions">
                            <button class="btn btn-success editPromotionActionSend" type="button">
                                <i class="icon-ok bigger-110"></i>
                                Сохранить сотрудника
                            </button>
                            <button onclick="javascript:fpcs.closeDialog()" class="btn btn-info" type="button">
                                <i class="icon-reply bigger-110"></i>
                                Отменить
                            </button>
                        </div>
                    }

                </div>
            </div>

    </div>

</div>

<script type="text/javascript">
    jQuery(function ($) {
        fpcs.initDatePicker();
    });
</script>
@Html.Script(Scripts.Render("~/bundles/jqueryval"))