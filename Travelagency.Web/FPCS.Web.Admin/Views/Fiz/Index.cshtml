@model FPCS.Web.Admin.Models.Fiz.FizIndexModel
@using FPCS.Data.Enums
@{
    ViewBag.Title = "База клиентов физических лиц";
    ViewBag.Header = "База клиентов физических лиц";
}

@Html.Hidden("WayOfInforms", Model.WayOfInform, new { id = "wayOfInforms" })
@Html.Hidden("TypeFizs", Model.TypeFiz, new { id = "typeFizs" })

<div class="row-fluid">
    <div class="span12 gridWrapper">
        <table id="gridTable"></table>
        <div id="gridPager"></div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/css/jqGrid")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqGrid")

    <script type="text/javascript">
        jQuery(function ($) {
            fizPerson.initIndexPage();

            window.addEventListener("resize", function () {
                $('.chzn-container').innerWidth($('#selecciona_paciente_estadisticas_form').innerWidth());
                $('.chzn-search input').innerWidth($('#selecciona_paciente_estadisticas_form').innerWidth() - 12);
                $('.chzn-drop').innerWidth($('#selecciona_paciente_estadisticas_form').innerWidth() - 2);
            }, false);
        });
    </script>
}